extends layout

block content
	a(href="http://localhost:3000/") Home
	span Welcome: 
	span(id='welcome')

	h1 Task Management System: Task List

	table(id='myTable')
		tr(class='header')
			td 
				strong Title
			td 
				strong Content
			td 
				strong Deadline
			td 
				strong Owner
			td
				strong CreatedBy
			td 
				strong Complete
			td 
				strong ID

		each x in data
			tr(class="rows")
				td #{x.title}
				td #{x.content}
				td #{x.deadline}
				td #{x.owner}
				td #{x.createdBy}
				td(class="complete") #{x.complete}
				td #{x._id}

	br
	br

	form(method="post")
		input(type="input" name="title" placeholder="title")
		input(type="input" name="content" placeholder="content")
		input(type="input" name="deadline" placeholder="deadline")
		input(type="input" name="owner" placeholder="owner")
		input(type="submit" name="POST" value="Add Task")

	br
	br

	span Title Search 
	input(type="text" id="myInput" onkeyup="filterSearch()" placeholder="Search for title..")

	br

	p Filter tasks by:

	a(href="#" id="all") All
	br
	a(href="#" id="completed") Completed Tasks
	br
	a(href="#" id="uncompleted") Uncompleted Tasks
	br
	span Deadline Filter: 
	input(type="input" id="deadlineText" onkeyup="filterDeadline()" placeholder="ccyy-MM-dd")
	br
	a(href="#" id="overdue") Overdue
	br
	a(href="#" id="completedLastMonth") Completed within the Last Month


	script document.getElementById('all').addEventListener("click", filterAll)

	script document.getElementById('completed').addEventListener("click", filterCompleted)

	script document.getElementById('uncompleted').addEventListener("click", filterUncompleted)

	script document.getElementById('overdue').addEventListener("click", filterOverdue)

	script document.getElementById('completedLastMonth').addEventListener("click", filterCompletedLastMonth)